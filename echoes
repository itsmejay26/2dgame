    <script>
        // Game State
        const GameState = {
            level: 1,
            score: 0,
            lives: 3,
            pattern: [],
            playerInput: [],
            phase: 'watching', // watching, recalling, feedback
            gridSize: 3,
            patternLength: 3,
            showTime: 800,
            colors: ['cyan', 'purple', 'pink', 'gold'],
            totalAttempts: 0,
            correctAttempts: 0,
            consecutiveCorrect: 0,
            consecutiveWrong: 0,
            adaptiveDifficulty: 1,
            isPlaying: false,
            audioStarted: false
        };

        // DOM Elements
        const screens = {
            title: document.getElementById('title-screen'),
            game: document.getElementById('game-screen'),
            result: document.getElementById('result-screen')
        };

        const elements = {
            startBtn: document.getElementById('start-btn'),
            grid: document.getElementById('echo-grid'),
            levelDisplay: document.getElementById('level-display'),
            mindScore: document.getElementById('mind-score'),
            phaseText: document.getElementById('phase-text'),
            phaseFill: document.getElementById('phase-fill'),
            patternIndicator: document.getElementById('pattern-indicator'),
            focusRing: document.getElementById('focus-ring'),
            tutorial: document.getElementById('tutorial'),
            tutorialBtn: document.getElementById('tutorial-btn'),
            difficultyIndicator: document.getElementById('difficulty-indicator'),
            hapticFlash: document.getElementById('haptic-flash'),
            playAgainBtn: document.getElementById('play-again-btn'),
            finalLevel: document.getElementById('final-level'),
            finalScore: document.getElementById('final-score'),
            finalAccuracy: document.getElementById('final-accuracy'),
            finalState: document.getElementById('final-state'),
            resultTitle: document.getElementById('result-title'),
            particlesCanvas: document.getElementById('particles-canvas')
        };

        // Audio System using Tone.js
        let audioContext = {
            synth: null,
            ambientSynth: null,
            initialized: false
        };

        function initAudio() {
            if (audioContext.initialized) return;
            
            audioContext.synth = new Tone.PolySynth(Tone.Synth, {
                oscillator: { type: 'sine' },
                envelope: {
                    attack: 0.02,
                    decay: 0.3,
                    sustain: 0.2,
                    release: 0.8
                }
            }).toDestination();
            audioContext.synth.volume.value = -12;

            audioContext.ambientSynth = new Tone.FMSynth({
                harmonicity: 3,
                modulationIndex: 10,
                oscillator: { type: 'sine' },
                envelope: {
                    attack: 0.5,
                    decay: 0.5,
                    sustain: 0.5,
                    release: 2
                },
                modulation: { type: 'triangle' },
                modulationEnvelope: {
                    attack: 0.5,
                    decay: 0.5,
                    sustain: 0.5,
                    release: 2
                }
            }).toDestination();
            audioContext.ambientSynth.volume.value = -25;

            audioContext.initialized = true;
        }

        async function startAudio() {
            if (GameState.audioStarted) return;
            await Tone.start();
            initAudio();
            GameState.audioStarted = true;
        }

        const colorNotes = {
            cyan: ['C5', 'E5'],
            purple: ['D5', 'F#5'],
            pink: ['E5', 'G#5'],
            gold: ['F#5', 'A5']
        };

        function playColorSound(color) {
            if (!audioContext.synth || !GameState.audioStarted) return;
            const notes = colorNotes[color];
            audioContext.synth.triggerAttackRelease(notes, '8n');
        }

        function playSuccessSound() {
            if (!audioContext.synth || !GameState.audioStarted) return;
            audioContext.synth.triggerAttackRelease(['C5', 'E5', 'G5', 'C6'], '4n');
        }

        function playFailSound() {
            if (!audioContext.synth || !GameState.audioStarted) return;
            audioContext.synth.triggerAttackRelease(['A3', 'D#4'], '4n');
        }

        function playAmbientPulse() {
            if (!audioContext.ambientSynth || !GameState.audioStarted) return;
            const notes = ['C3', 'E3', 'G3', 'B3'];
            const note = notes[Math.floor(Math.random() * notes.length)];
            audioContext.ambientSynth.triggerAttackRelease(note, '2n');
        }

        // Particle System
        class ParticleSystem {
            constructor(canvas) {
                this.canvas = canvas;
                this.ctx = canvas.getContext('2d');
                this.particles = [];
                this.resize();
                window.addEventListener('resize', () => this.resize());
            }

            resize() {
                this.canvas.width = window.innerWidth;
                this.canvas.height = window.innerHeight;
            }

            createParticle(x, y, color) {
                return {
                    x: x || Math.random() * this.canvas.width,
                    y: y || Math.random() * this.canvas.height,
                    vx: (Math.random() - 0.5) * 0.5,
                    vy: (Math.random() - 0.5) * 0.5,
                    radius: Math.random() * 2 + 1,
                    color: color || `hsla(${180 + Math.random() * 60}, 70%, 60%, ${Math.random() * 0.3 + 0.1})`,
                    life: 1
                };
            }

            init(count = 50) {
                this.particles = [];
                for (let i = 0; i < count; i++) {
                    this.particles.push(this.createParticle());
                }
            }

            addBurst(x, y, color, count = 10) {
                for (let i = 0; i < count; i++) {
                    const particle = this.createParticle(x, y, color);
                    particle.vx = (Math.random() - 0.5) * 4;
                    particle.vy = (Math.random() - 0.5) * 4;
                    particle.life = 1;
                    this.particles.push(particle);
                }
            }

            update() {
                this.ctx.clearRect(0, 0, this.canvas.width, this.canvas.height);

                this.particles = this.particles.filter(p => {
                    p.x += p.vx;
                    p.y += p.vy;
                    p.life -= 0.002;

                    if (p.x < 0) p.x = this.canvas.width;
                    if (p.x > this.canvas.width) p.x = 0;
                    if (p.y < 0) p.y = this.canvas.height;
                    if (p.y > this.canvas.height) p.y = 0;

                    this.ctx.beginPath();
                    this.ctx.arc(p.x, p.y, p.radius, 0, Math.PI * 2);
                    this.ctx.fillStyle = p.color;
                    this.ctx.globalAlpha = p.life;
                    this.ctx.fill();
                    this.ctx.globalAlpha = 1;

                    return p.life > 0;
                });

                while (this.particles.length < 50) {
                    this.particles.push(this.createParticle());
                }

                requestAnimationFrame(() => this.update());
            }
        }

        const particles = new ParticleSystem(elements.particlesCanvas);
        particles.init();
        particles.update();

        // Screen Management
        function showScreen(screenName) {
            Object.values(screens).forEach(screen => screen.classList.remove('active'));
            screens[screenName].classList.add('active');
        }

        // Haptic Feedback Visual
        function triggerHaptic(x, y) {
            elements.hapticFlash.style.setProperty('--x', `${x}px`);
            elements.hapticFlash.style.setProperty('--y', `${y}px`);
            elements.hapticFlash.classList.add('active');
            setTimeout(() => elements.hapticFlash.classList.remove('active'), 200);

            if ('vibrate' in navigator) {
                navigator.vibrate(10);
            }
        }

        // Grid Generation
        function createGrid() {
            elements.grid.innerHTML = '<div class="focus-ring" id="focus-ring"></div><div class="pattern-indicator" id="pattern-indicator">OBSERVE</div>';
            elements.grid.style.gridTemplateColumns = `repeat(${GameState.gridSize}, 1fr)`;

            const cellCount = GameState.gridSize * GameState.gridSize;
            for (let i = 0; i < cellCount; i++) {
                const cell = document.createElement('div');
                cell.className = 'echo-cell';
                cell.dataset.index = i;
                cell.addEventListener('touchstart', handleCellTouch, { passive: false });
                cell.addEventListener('click', handleCellClick);
                elements.grid.appendChild(cell);
            }
        }

        // Pattern Generation - The Core Mechanic: "Thought Echoes"
        function generatePattern() {
            GameState.pattern = [];
            const cellCount = GameState.gridSize * GameState.gridSize;
            
            // Generate unique positions and colors
            const usedIndices = new Set();
            
            for (let i = 0; i < GameState.patternLength; i++) {
                let index;
                do {
                    index = Math.floor(Math.random() * cellCount);
                } while (usedIndices.has(index));
                usedIndices.add(index);
                
                const color = GameState.colors[Math.floor(Math.random() * GameState.colors.length)];
                GameState.pattern.push({ index, color });
            }
        }

        // Show Pattern Sequence
        async function showPattern() {
            GameState.phase = 'watching';
            elements.phaseText.textContent = 'OBSERVE';
            document.getElementById('pattern-indicator').textContent = 'OBSERVE';
            document.getElementById('pattern-indicator').classList.add('visible');
            document.getElementById('focus-ring').classList.add('active');

            await delay(1000);
            document.getElementById('pattern-indicator').classList.remove('visible');

            const cells = elements.grid.querySelectorAll('.echo-cell');
            
            for (let i = 0; i < GameState.pattern.length; i++) {
                const { index, color } = GameState.pattern[i];
                const cell = cells[index];
                
                // Update progress
                elements.phaseFill.style.width = `${((i + 1) / GameState.pattern.length) * 100}%`;
                
                // Show cell with color
                cell.classList.add('revealed', `echo-${color}`);
                playColorSound(color);
                
                // Create echo visualization
                createThoughtEcho(cell, color);
                
                await delay(GameState.showTime);
                
                cell.classList.remove('revealed', `echo-${color}`);
                await delay(200);
            }

            startRecallPhase();
        }

        function createThoughtEcho(cell, color) {
            const rect = cell.getBoundingClientRect();
            const echo = document.createElement('div');
            echo.className = 'thought-echo';
            
            const colorMap = {
                cyan: 'var(--accent-cyan)',
                purple: 'var(--accent-purple)',
                pink: 'var(--accent-pink)',
                gold: 'var(--accent-gold)'
            };
            
            echo.style.borderColor = colorMap[color];
            echo.style.left = `${rect.left + rect.width / 2}px`;
            echo.style.top = `${rect.top + rect.height / 2}px`;
            echo.style.width = '50px';
            echo.style.height = '50px';
            echo.style.marginLeft = '-25px';
            echo.style.marginTop = '-25px';
            
            document.body.appendChild(echo);
            
            setTimeout(() => echo.remove(), 1500);
        }

        // Recall Phase
        function startRecallPhase() {
            GameState.phase = 'recalling';
            GameState.playerInput = [];
            elements.phaseText.textContent = 'RECALL';
            elements.phaseFill.style.width = '0%';
            document.getElementById('focus-ring').classList.remove('active');
            document.getElementById('pattern-indicator').textContent = 'YOUR TURN';
            document.getElementById('pattern-indicator').classList.add('visible');
            
            setTimeout(() => {
                document.getElementById('pattern-indicator').classList.remove('visible');
            }, 1000);
        }

        // Handle Cell Touch/Click
        function handleCellTouch(e) {
            e.preventDefault();
            if (GameState.phase !== 'recalling') return;
            
            const touch = e.touches[0];
            triggerHaptic(touch.clientX, touch.clientY);
            processCellInput(e.currentTarget);
        }

        function handleCellClick(e) {
            if (GameState.phase !== 'recalling') return;
            triggerHaptic(e.clientX, e.clientY);
            processCellInput(e.currentTarget);
        }

        function processCellInput(cell) {
            const index = parseInt(cell.dataset.index);
            const currentStep = GameState.playerInput.length;
            const expectedPattern = GameState.pattern[currentStep];
            
            GameState.totalAttempts++;
            
            if (expectedPattern.index === index) {
                // Correct!
                GameState.playerInput.push(index);
                GameState.correctAttempts++;
                GameState.consecutiveCorrect++;
                GameState.consecutiveWrong = 0;
                
                cell.classList.add('revealed', `echo-${expectedPattern.color}`, 'correct');
                playColorSound(expectedPattern.color);
                createThoughtEcho(cell, expectedPattern.color);
                
                // Add particles burst
                const rect = cell.getBoundingClientRect();
                particles.addBurst(
                    rect.left + rect.width / 2,
                    rect.top + rect.height / 2,
                    `hsla(${expectedPattern.color === 'cyan' ? 180 : expectedPattern.color === 'purple' ? 280 : expectedPattern.color === 'pink' ? 330 : 45}, 70%, 60%, 0.8)`,
                    15
                );
                
                elements.phaseFill.style.width = `${((currentStep + 1) / GameState.pattern.length) * 100}%`;
                
                setTimeout(() => {
                    cell.classList.remove('revealed', `echo-${expectedPattern.color}`, 'correct');
                }, 300);
                
                // Check if pattern complete
                if (GameState.playerInput.length === GameState.pattern.length) {
                    levelComplete();
                }
            } else {
                // Wrong!
                GameState.consecutiveWrong++;
                GameState.consecutiveCorrect = 0;
                GameState.lives--;
                
                cell.classList.add('wrong');
                playFailSound();
                
                setTimeout(() => cell.classList.remove('wrong'), 500);
                
                if (GameState.lives <= 0) {
                    gameOver();
                } else {
                    // Adapt difficulty down
                    adaptDifficulty('down');
                    
                    // Show correct answer briefly
                    showCorrectAnswer();
                }
            }
        }

        async function showCorrectAnswer() {
            GameState.phase = 'feedback';
            const cells = elements.grid.querySelectorAll('.echo-cell');
            
            await delay(500);
            
            // Show what was expected
            const currentStep = GameState.playerInput.length;
            const expected = GameState.pattern[currentStep];
            const cell = cells[expected.index];
            
            cell.classList.add('revealed', `echo-${expected.color}`);
            await delay(1000);
            cell.classList.remove('revealed', `echo-${expected.color}`);
            
            // Restart level
            await delay(500);
            startLevel();
        }

        // Adaptive Difficulty System
        function adaptDifficulty(direction) {
            elements.difficultyIndicator.classList.add('visible');
            elements.difficultyIndicator.textContent = direction === 'up' ? 'MIND EXPANDING...' : 'RECALIBRATING...';
            
            setTimeout(() => {
                elements.difficultyIndicator.classList.remove('visible');
            }, 1500);
            
            if (direction === 'up') {
                GameState.adaptiveDifficulty = Math.min(GameState.adaptiveDifficulty + 0.1, 2);
                GameState.showTime = Math.max(400, GameState.showTime - 50);
            } else {
                GameState.adaptiveDifficulty = Math.max(GameState.adaptiveDifficulty - 0.1, 0.5);
                GameState.showTime = Math.min(1200, GameState.showTime + 100);
            }
            
            // Trigger perception shift effect
            elements.grid.classList.add('perception-shift');
            setTimeout(() => elements.grid.classList.remove('perception-shift'), 800);
        }

        // Level Complete
        function levelComplete() {
            GameState.phase = 'feedback';
            GameState.score += GameState.patternLength * 100 * GameState.adaptiveDifficulty;
            GameState.level++;
            
            playSuccessSound();
            playAmbientPulse();
            
            // Adapt difficulty based on performance
            if (GameState.consecutiveCorrect >= 3) {
                adaptDifficulty('up');
            }
            
            // Progress difficulty
            if (GameState.level % 3 === 0 && GameState.patternLength < 8) {
                GameState.patternLength++;
            }
            
            if (GameState.level % 5 === 0 && GameState.gridSize < 5) {
                GameState.gridSize++;
                createGrid();
            }
            
            updateUI();
            
            setTimeout(() => startLevel(), 1500);
        }

        // Start Level
        function startLevel() {
            updateUI();
            generatePattern();
            showPattern();
        }

        // Game Over
        function gameOver() {
            GameState.isPlaying = false;
            
            const accuracy = GameState.totalAttempts > 0 
                ? Math.round((GameState.correctAttempts / GameState.totalAttempts) * 100) 
                : 0;
            
            let mindState = 'Awakening';
            if (accuracy >= 90) mindState = 'Transcendent';
            else if (accuracy >= 75) mindState = 'Enlightened';
            else if (accuracy >= 60) mindState = 'Focused';
            else if (accuracy >= 40) mindState = 'Aware';
            
            elements.finalLevel.textContent = GameState.level - 1;
            elements.finalScore.textContent = Math.round(GameState.score);
            elements.finalAccuracy.textContent = `${accuracy}%`;
            elements.finalState.textContent = mindState;
            
            if (GameState.level >= 10) {
                elements.resultTitle.textContent = 'MIND MASTERY';
            } else if (GameState.level >= 5) {
                elements.resultTitle.textContent = 'ECHO COMPLETE';
            } else {
                elements.resultTitle.textContent = 'THOUGHTS FADED';
            }
            
            setTimeout(() => showScreen('result'), 1000);
        }

        // Update UI
        function updateUI() {
            elements.levelDisplay.textContent = GameState.level;
            elements.mindScore.textContent = Math.round(GameState.score);
        }

        // Reset Game
        function resetGame() {
            GameState.level = 1;
            GameState.score = 0;
            GameState.lives = 3;
            GameState.pattern = [];
            GameState.playerInput = [];
            GameState.gridSize = 3;
            GameState.patternLength = 3;
            GameState.showTime = 800;
            GameState.totalAttempts = 0;
            GameState.correctAttempts = 0;
            GameState.consecutiveCorrect = 0;
            GameState.consecutiveWrong = 0;
            GameState.adaptiveDifficulty = 1;
            GameState.isPlaying = true;
        }

        // Utility
        function delay(ms) {
            return new Promise(resolve => setTimeout(resolve, ms));
        }

        // Event Listeners
        elements.startBtn.addEventListener('click', async () => {
            await startAudio();
            showScreen('game');
            elements.tutorial.classList.add('active');
        });

        elements.tutorialBtn.addEventListener('click', () => {
            elements.tutorial.classList.remove('active');
            resetGame();
            createGrid();
            startLevel();
        });

        elements.playAgainBtn.addEventListener('click', () => {
            showScreen('game');
            resetGame();
            createGrid();
            startLevel();
        });

        // Touch handling for entire document to prevent scrolling during game
        document.addEventListener('touchmove', (e) => {
            if (GameState.isPlaying) {
                e.preventDefault();
            }
        }, { passive: false });

        // Initialize
        createGrid();
    </script>
</body>
</html>
